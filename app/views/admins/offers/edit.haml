%h1= "Editar #{@offer.title}"
= form_for @offer do |f|
  -#= f.input :test, as: :hidden, input_html: { name: request_forgery_protection_token, value: form_authenticity_token }
  -#= f.input :test2, as: :hidden, input_html: { name: "_method", value: "post" }

  = f.label 'Title'
  = f.text_field :title
  %br
  = f.label 'Categorias de empleo'
  = f.collection_select :job_categories, JobCategory.all, :id, :description, prompt: true, selected: @offer.job_category_ids
