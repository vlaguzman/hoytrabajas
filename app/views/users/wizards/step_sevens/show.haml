= render '/shared/header'
= react_component("src/components/FormsLayout/FormProgress", { value: FormProgressManager.calculate_user_progress(8) }, prerender: false)
.m-formWrapper
  .formBackground
  .formContainer
    .formHeading
      %h5.formTitle= t('.title')
      %p.formSubtitle= t('.subtitle')
    .formContent
      .formChoices
        %a.formButton__accept.a-button.--big.--secondary{:href => @choices.next_path}= t('.content.accept')
        %a.formButton__decline.a-button.--big.--outlined{:href => @choices.skip_path}= t('.content.decline')
    .formButtons
      %a.formPrevButton{:href => @choices.return_path}= t('.form_buttons.previous')
      %a.formNextButton{:href => @choices.skip_path}= t('.form_buttons.skip')
  