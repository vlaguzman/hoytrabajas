%h1 Empecemos por conocernos

= form_for(:user, url: '/users', method: :put, html: { id: :update_user } ) do |field|
  - if @user.errors.present?
    %lu
    - @user.errors.full_messages.each do |message|
      %li= message

  = hidden_field_tag :operation, :step_one

  = field.label :name, "Nombre"
  = field.text_field :name

  = field.label :last_name, "Apellido"
  = field.text_field :last_name

  /#TODO Move this logic to other site
  = field.select :document_type, @document_types.map { |type| [type.description, type.id] }, { prompt: "Seleccione Nacionalidad"}

  = field.select(:nationalities, @nationalities.map { |nationality| [nationality.description, nationality.id] } ,{ prompt: "Seleccione Nacionalidad"}, { :multiple => true } )
  = field.label :identification_number, "Numero de Documento"
  = field.text_field :identification_number

  = field.label :contact_number, "Numero de Contacto"
  = field.text_field :contact_number

  = field.submit("siguiente")